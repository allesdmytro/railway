<% if current_user && current_user.admin? %>
    <h1> New Train</h1>

    <%= form_with model: @train do |form| %>
        <div>
            <%= form.label :departure %>
            <%= form.text_field :departure %>
        </div>

        <div>
            <%= form.label :destignation %>
            <%= form.text_field :destignation %>
        </div>

        <div>
            <%= form.label :seats %>
            <%= form.number_field :seats %>
        </div>

        <div>
            <%= form.submit %>
        </div>
    <% end %>
<% else %>
  Access denied
<% end %>
