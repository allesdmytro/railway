<header class="header">
<label>
  <%= image_tag("logo.svg", alt: "Our logo", :class => "logoTrain") %>
</label>
<nav class="nav">
  <ul class="nav__list">
    <% if current_user %>
      <li class="nav__item">
        <p class="nav__text">Hello, <%= current_user.email %>!</p>
      </li>
      <li class="nav__item">
        <%= link_to "Log out", destroy_user_session_path, 'data-turbo-method': :delete, class: "nav__link" %>
      </li>
    <% else %>
      <li class="nav__item">
        <p class="nav__text"> You are not signed in </p>
      </li>
      <li class="nav__item">
        <%= link_to "Sign up!", new_user_registration_path, class: "nav__link" %>
      </li>
      <li class="nav__item">
      <%= link_to "Sign in", new_user_session_path, class: "nav__link" %>
      </li>
    <% end %>
  </ul>
</nav>
</header>