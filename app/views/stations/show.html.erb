<h1>Stations#show</h1>
<p>Find me in app/views/stations/show.html.erb</p>
<% if current_user && current_user.admin? %>
<%= link_to 'Edit station', 
     edit_station_path(@station), 
     class: "button is-warning" 
%>
<%= link_to "Destroy", 
      station_path(@station), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  },
      class: "button is-danger" %>
<% end %>
<br>
Station title: <%= @station.title %>
<br>
Station address: <%= @station.address %>
<br>
Station phone: <%= @station.phone %>
<br><br>
<h1> <b>Trains list:</b> <h1>
<% @trains.each do |train| %>
<br>
  Train number: <%= link_to train.id, train %>
  <br>
  departure: <%= train.departure %>
  <br>
  destignation: <%= train.destignation %>
  <br>
  number of seats: <%= train.seats %>
  <br>
  <% if current_user && current_user.admin? %>
  <%= link_to 'Delete from station', 
              disconnect_path(train_id: train.id, station_id: @station.id),
              class: 'button is-danger' %>
  <% end %>
  </div>
<% end %>
